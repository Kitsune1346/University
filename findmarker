function find_marker(r::Robot)
    side=Nord
    n=1
    iss_odd=false
    while !find_marke(r, side, n)
        if iss_odd==true 
            n+=1
        end
        side=otherside(side)
        iss_odd=!iss_odd
    end
end
function find_marke(r::Robot, side::HorizonSide, num_steps::Integer)
    for _ in 1:num_steps
        if ismarker(r)
            return true
        end
        move!(r, side)
    end
    return false
end
function otherside(side::HorizonSide)
    side=HorizonSide(mod(Int(side)+1, 4))
end
